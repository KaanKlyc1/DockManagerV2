<div class="container">
  <h1 class="text-center">Update Dock</h1>

  <div class="row justify-content-center">
    <div class="col-md-6">
      <form action="/update" method="POST">
        <div class="form-group">
          <label for="name">Name(<strong>Required!</strong>):</label>
          <input
            type="text"
            name="name"
            id="name"
            class="form-control"
            value="<%= dock.name %>"
          />
        </div>
        <div class="form-group">
          <label for="capacity">Capacity(<strong>Required!</strong>):</label>
          <input
            type="text"
            name="capacity"
            id="capacity"
            class="form-control"
            value="<%= dock.capacity %>"
          />
        </div>
        <div class="form-group">
          <label for="description">Description(Optional):</label>
          <input
            type="text"
            name="description"
            id="description"
            class="form-control"
            value="<%= dock.description %>"
          />
        </div>
        <div class="form-group">
          <label for="propsKey">Props(Optional):</label>
          <br />
          <input
            type="text"
            name="propsKey"
            id="props"
            class="form-controlll"
            value="<%= dock.props.key %>"
          />
          <input
            type="text"
            name="propsValue"
            id="props"
            class="form-controlll"
            value="<%= dock.props.value %>"
          />
        </div>

        <button
          type="submit"
          class="btn btn-primary"
          name="updateButton"
          value="<%= dock.id %>"
        >
          Update
        </button>
        <a href="http://localhost:5000" class="btn btn-danger">Cancel</a>
      </form>
    </div>
  </div>
</div>
